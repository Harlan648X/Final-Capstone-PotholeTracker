@using Capstone.Web.Models
@model List<PotholeModel>

@{
    ViewBag.Title = "Employee Portal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        placePotholes(@Html.Raw(Json.Encode(Model.ToArray())), "");
    })
</script>

<div id="reviewPanel" class="col-lg-4">
    <table class="table">
        <tbody>
            @{
                int count = 0;
                foreach (PotholeModel ph in Model)
                {
                    count++;
                    string id = "rep" + count.ToString();
                    <tr>
                        <td>Reported: @ph.ReportDate.Date.ToShortDateString()</td>
                        <td id="@id">address</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


<div class="col-lg-8">
    <div id="map"></div>
</div>

