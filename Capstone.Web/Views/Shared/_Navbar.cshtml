
@{
    Layout = null;
}
@model Capstone.Web.Models.User

@if (Model == null)
{

    <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
            <li><a href="/home/index">Home</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/user/register"><span class="glyphicon glyphicon-user"></span> Register </a></li>
            <li><a href="/user/login"><span class="glyphicon glyphicon-log-in"></span> Login </a></li>
        </ul>
    </div>
}
else
{
    <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
            <li><a href="/home/index">Home</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li class="navbar-text">Welcome @Model.Name.Split(' ')[0]</li>
            <li><a href="/user/logout"><span class="glyphicon glyphicon-log-out"></span> Log Out </a></li>
        </ul>
    </div>
}